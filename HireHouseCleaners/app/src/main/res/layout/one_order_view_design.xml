<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:background="#54A4E4"
    android:id="@+id/one_order_view_design"
    app:cardElevation="6dp">

    <TextView
        android:id="@+id/username_id"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_black"
        android:text="customer  name"
        android:textColor="#6E6B6B"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idforimageview"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/order_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_location_id"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:text="locatopm"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/idforimageview"
        app:layout_constraintTop_toBottomOf="@+id/username_id" />


</androidx.constraintlayout.widget.ConstraintLayout>

